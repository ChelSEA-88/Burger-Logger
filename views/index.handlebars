<h1>Eat Da Burger!</h1>



<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=1}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burger}}
    {{#if devored}}
      {{> burgers/burger-block devoured=0}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">burger</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Devour it!</button>
  <button type="submit">Eat It Again!</button>
</form>