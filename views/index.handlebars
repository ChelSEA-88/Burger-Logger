
<div class="jumbotron text-center">
 <p>Eat-Da-Burger!</p>
 <hr /> [{|]
</div>

<div class="container">

<div class="row">
    <div clas="col-md-12 text-center">
        <div>
            <label>Build Your Own Burger Here:</label>
            <form class="new-burger-form">
                <div class="form-group">
                    <input type="text" id="new-burger" name="burger">
                    <button type="submit" id="addbutton">Order up!</button>
                </div>
            </form>
        </div>
    </div>
</div>



    <div class="row">
        <!-- New Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="uneaten-header"><strong>Burger Queue</strong></div>
                <hr/>
                <div class="panel-body">
                    
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span class="uneaten"><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="eatbutton" data-id="{{this.id}}"data-devoured="{{devour}}">Yum</button>
                            {{/unless}}
                        {{/each}}
                    
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="devoured-header"><strong>Devoured</strong></div>
                <hr/>
                
                <div class="panel-body">
                    
                        {{#each burgers}}
                            {{#if devoured}}
                                <span class="eaten"><strong> {{this.burger_name}} </strong></span>
                                <button type="button" class="delete" data-id="{{this.id}}" data-devoured="{{devour}}">X</button>
                            {{/if}}
                        {{/each}}
                    
                </div>
            </div>
        </div>
    </div>

</div>

