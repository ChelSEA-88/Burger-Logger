<h1>Eat Da Burger!</h1>



<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=1}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burger}}
    {{#if devored}}
      {{> burgers/burger-block devoured=0}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">burger</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">hungry?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>